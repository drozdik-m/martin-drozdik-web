@page "/error"
@model MartinDrozdik.Pages.Error.Areas.ErrorPages.Pages.ErrorPageModel
@{
    Layout = "_ErrorLayout";
}


@section Styles {
    <link href="@Model.PathProvider.PathTo("_out/css/ErrorPage.css", StaticResources.Namespace)" rel="stylesheet" />
}

@section Scripts{
    <script type="text/javascript" src="@Model.PathProvider.PathTo("_out/js/ErrorPage.js", StaticResources.Namespace)"></script>
}

<div id="errorWrapper">
    <img id="errorIcon" src="@Model.IconPath" alt="Error" />
    <h1>@Model.Header</h1>
    <p id="errorText">@Model.Text</p>
    <span id="errorNumber">Error @Model.ErrorStatusCode</span>
    <span class="commonButtonWrapper">
        <a id="backButton" class="commonButton" href="/" title="@Model.BackButtonText">@Model.BackButtonText</a>
    </span>
</div>

