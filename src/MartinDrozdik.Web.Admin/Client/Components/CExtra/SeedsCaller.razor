@inherits RootComponent

@* Error space *@
@if(!(lastException is null))
{
    <MudAlert Severity="Severity.Error" Variant="Variant.Filled">@lastException.Message</MudAlert>
}



<MudPaper Width="300px">
    <MudList Clickable="true">

        <MudListSubheader>
            Seeds
        </MudListSubheader>
        
        @foreach(var (name, seed) in Seeds)
        {
            <MudListItem>
                <MudText Class="mr-5" Style="display: inline;">@name</MudText>
                <MudButton Color="Color.Primary" Variant="Variant.Outlined" OnClick="@(async _ => await SeedAsync(seed, verbose: true))" >Seed</MudButton>
            </MudListItem>
        }
    </MudList>
</MudPaper>

