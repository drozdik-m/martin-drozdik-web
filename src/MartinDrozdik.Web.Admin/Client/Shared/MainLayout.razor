@inherits LayoutComponentBase

@* MudBlazor *@
<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

@* Layout *@
<MudLayout>

    @* Top app bar *@
    <MudAppBar Elevation="1" Dense="true">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@(e => DrawerToggle())" />
        <MudSpacer />

        @* Web redirect *@
        <MudTooltip Text="Open web">
                <MudIconButton Icon="@Icons.Material.Filled.Home" Color="Color.Inherit" Edge="Edge.End" 
                               Target="_blank" Href="/web/redirect" />
        </MudTooltip>

        @* More actions *@
        <MudTooltip Text="Settings">
            <MudMenu Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" >
                <a href="/user/logout"><MudMenuItem>Logout</MudMenuItem></a>
            </MudMenu>
        </MudTooltip>
    </MudAppBar>

    @* Left drawer *@
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2" Variant="@DrawerVariant.Mini" OpenMiniOnHover="true">
        <MudNavMenu>
            <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Filled.Home">Admin</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Filled.Tag">Project tags</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent Class="pt-16 px-16">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}